// 3050 proc
fun trawler_activity_update(component0: Component) {

	val int1: Int = ~min(255, ~max(0, VARBIT[3377]))
	if (int1 < calc(255 / 4)) {
		cc_setcolour(0xee1111)
	} else if (int1 < calc(255 / 2)) {
		cc_setcolour(0xeeee11)
	} else {
		cc_setcolour(0x11ee11)
	}
	val width2: Int = scale(int1, 255, if_getwidth(component0))
	cc_setsize(width2, 0, ^setsize_abs, ^setsize_minus)
	.cc_setsize(width2, 0, ^setsize_minus, ^setsize_minus)
	return 
}
