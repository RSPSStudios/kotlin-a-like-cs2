// 2232 clientscript
fun magic_flash(component0: Component, int1: Int, int2: Int) {

	int2 = calc(int2 - 1)
	if (int2 <= 0) {
		int2 = 15
		if (int1 = 1) {
			if_settrans(250, component0)
		} else {
			if_settrans(0, component0)
		}
		int1 = calc(1 - int1)
	}
	if_setontimer({
		magic_flash(component0, int1, int2)
	}, magic_spellbook:3)
	return 
}
